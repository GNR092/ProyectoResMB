{
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "tsconfig.json": "tsconfig.*.json, env.d.ts",
    "vite.config.*": "jsconfig*, vitest.config.*, cypress.config.*, playwright.config.*",
    "package.json": "package-lock.json, pnpm*, .yarnrc*, yarn*, .eslint*, eslint*, .oxlint*, oxlint*, .prettier*, prettier*, .editorconfig",
    "composer.json": "composer.lock"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "php.executablePath": "D:/MBProject/php/php.exe",
  "composer.executablePath": "D:/MBProject/composer/composer",
  "php.validate.executablePath": "D:/MBProject/php/php.exe",
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "terminal.integrated.env.windows": {
    "PATH": "${workspaceFolder}\\..\\php;${workspaceFolder}\\..\\composer;${env:PATH}"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": false,
  "[php]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[env]": {
    "editor.defaultFormatter": "IronGeek.vscode-env"
  },
  "[sql]": {
    "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode"
  },
  "php.problems.exclude": {
    "**/*": [
      "PHP6609",
      "PHP0424",
      "PHP0418",
      "P1013"
    ]
  },
    "[ssh_config]": {
      "editor.defaultFormatter": "jamief.vscode-ssh-config-enhanced"
    },
    "[xml]": {
      "editor.defaultFormatter": "redhat.vscode-xml"
    },
}
